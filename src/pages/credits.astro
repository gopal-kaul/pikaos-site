---
import CreditWidget from "~/components/widgets/CreditWidget.astro";
import { SITE } from "~/config.mjs";
import Layout from "~/layouts/PageLayout.astro";
import PikaLogoDark from "../assets/images/pika-logo-text-dark.svg";

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
const creditsData = [
  {
    name: "Cosmo",
    description: "The OG",
  },
  {
    name: "GloriousEggroll",
    description: "OG 2",
  },
  {
    name: "Ferreo",
    description: "God Man",
  },
  {
    name: "Zukureneno",
    description: "Cool dude",
  },
  {
    name: "BL4Z3",
    description: "Some random dude",
  },
];
---

<Layout {meta}>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12 md:py-20">
    <h1 class="text-xl md:text-4xl font-bold text-center">Credits</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 pt-10">
      {
        creditsData.map((credit) => (
          <CreditWidget
            name={credit.name}
            image={PikaLogoDark}
            description={credit.description}
          />
        ))
      }
    </div>
  </div>
</Layout>
